
#include <iostream>

using namespace std;

int main()
{
	

	cout << "Difficulty levels: \n" << endl;

	cout << "1 - Easy" << endl;
	cout << "2 - Normal" << endl;
	cout << "3 - Hard \n" << endl;

	cout << "Choice: ";
	int value;
	cin >> value;

	switch (value)
	{
	case 1:
		{
		cout << "You picked Easy!" << endl;
		break;
		}
	case 2:
		{
		cout << "You picked Normal!" << endl;
		break;
		}
	case 3:
		{
		cout << "You picked Hard!" << endl;
		break;
		}

	default:
		cout << "Error!" << endl;
		break;
	}


	return 0;

}
