
#include <iostream>
#include <string>

using namespace std;

int main()
{
	
	bool success = true;
	string username;
	string password;

	do
	{
		cout << "Enter your Username: " << endl;
		cin >> username;
		cout << "Enter your password: " << endl;
		cin >> password;
		if ((username == "James") && (password == "qwerty"))
		{
			cout << "\nYou are logged in as an James!";
		}
		else if ((username == "Gabe") && (password == "pass123"))
		{
			cout << "\nYou are logged in as a Gabe!";
		}
		else
		{
			cout << "\nWrong Username or Password! Try again!\n\n";
			success = false;
		}
	} while (!success);

	return 0;

}
